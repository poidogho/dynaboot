{
   "compilerOptions": {
       "module": "commonjs",
       "esModuleInterop": true,
       "target": "ES2020",
       "moduleResolution": "node",
       "noImplicitAny": true,
       "suppressImplicitAnyIndexErrors": true,
       "experimentalDecorators": true,
       "emitDecoratorMetadata": true,
       "noUnusedLocals": true,
       "noUnusedParameters": true,
       "outDir": "dist/api/src",
       "baseUrl": "."
   },
   "include": [
       "src/**/*.ts",
       "node_modules/@types"
   ],
   "exclude": [
       "node_modules/@types/node"
   ]
}